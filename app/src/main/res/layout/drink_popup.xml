<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_background" android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="drink name" android:id="@+id/drinkNamePopup" android:layout_gravity="center"
                    android:textColor="#000000"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_question_mark_desktop_wallpaper_grey_computer_icon__2_"
                    android:id="@+id/drinkImagePopUp" android:layout_weight="1" android:layout_gravity="center"/>
            <TextView
                    android:text="Ingredients:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:textColor="#000000"
                    android:textStyle="bold"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/ingredientsList"
                    android:layout_marginLeft="20dp" android:textColor="#000000"/>
            <TextView
                    android:text="Recipe:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/recipe"
                    android:layout_marginLeft="20dp" android:textColor="#000000"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>